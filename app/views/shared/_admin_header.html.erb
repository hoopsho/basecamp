<%# frozen_string_literal: true %>

<%# Admin Header with mobile menu and theme toggle %>
<header class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <%# Left: Mobile menu button and page title placeholder %>
      <div class="flex items-center gap-4">
        <%# Mobile hamburger menu button %>
        <button type="button"
                data-controller="toggle"
                data-action="click->toggle#toggle"
                data-toggle-target="button"
                class="lg:hidden inline-flex items-center justify-center p-2 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500"
                aria-controls="mobile-menu"
                aria-expanded="false">
          <span class="sr-only">Open sidebar</span>
          <svg class="block h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>

        <%# Breadcrumbs or page title could go here %>
        <nav class="hidden sm:flex" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
            <li>
              <%= link_to 'Admin', admin_root_path, class: "hover:text-gray-700 dark:hover:text-gray-300" %>
            </li>
            <% if controller.controller_name != 'dashboards' %>
              <li>
                <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
              </li>
              <li class="text-gray-900 dark:text-gray-100 font-medium">
                <%= controller.controller_name.humanize %>
              </li>
            <% end %>
          </ol>
        </nav>
      </div>

      <%# Right: Theme toggle and user actions %>
      <div class="flex items-center gap-2">
        <%# Theme toggle %>
        <div data-controller="theme" class="flex items-center bg-gray-100 dark:bg-gray-700 rounded-lg p-1">
          <button type="button"
                  data-action="click->theme#toggle"
                  data-theme-theme-param="light"
                  class="p-1.5 rounded text-gray-600 dark:text-gray-400 hover:bg-white dark:hover:bg-gray-600 transition-colors"
                  aria-label="Switch to light mode">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
          </button>
          <button type="button"
                  data-action="click->theme#toggle"
                  data-theme-theme-param="dark"
                  class="p-1.5 rounded text-gray-600 dark:text-gray-400 hover:bg-white dark:hover:bg-gray-600 transition-colors"
                  aria-label="Switch to dark mode">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 24.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
            </svg>
          </button>
          <button type="button"
                  data-action="click->theme#toggle"
                  data-theme-theme-param="system"
                  class="p-1.5 rounded text-gray-600 dark:text-gray-400 hover:bg-white dark:hover:bg-gray-600 transition-colors"
                  aria-label="Use system theme">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </button>
        </div>

        <%# User dropdown %>
        <div class="relative ml-2" data-controller="toggle">
          <button type="button"
                  data-action="click->toggle#toggle"
                  data-toggle-target="button"
                  class="flex items-center gap-2 p-2 rounded-lg text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
                  aria-expanded="false">
            <span class="hidden sm:block text-sm font-medium text-gray-700 dark:text-gray-300">
              <%= Current.user&.display_name %>
            </span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>

          <%# Dropdown menu %>
          <div data-toggle-target="content"
               data-toggle-active-class="hidden"
               class="hidden absolute right-0 mt-2 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 py-1 z-50">
            <div class="px-4 py-2 border-b border-gray-200 dark:border-gray-700">
              <p class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= Current.user&.display_name %></p>
              <p class="text-xs text-gray-500 dark:text-gray-400 truncate"><%= Current.user&.email_address %></p>
            </div>

            <%= link_to edit_admin_user_path(Current.user),
                        class: "block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700" do %>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                Profile
              </div>
            <% end %>

            <div class="border-t border-gray-200 dark:border-gray-700 mt-1 pt-1">
              <%= button_to session_path,
                            method: :delete,
                            class: "w-full text-left px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20" do %>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                  </svg>
                  Sign out
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
