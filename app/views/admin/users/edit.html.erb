<div class="max-w-2xl mx-auto space-y-6">
  <div class="flex items-center space-x-4">
    <% if Current.user&.admin? %>
      <%= link_to admin_users_path, class: "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
      <% end %>
    <% else %>
      <%= link_to admin_root_path, class: "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
      <% end %>
    <% end %>
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Edit Profile</h1>
  </div>

  <div class="bg-white dark:bg-gray-800 shadow rounded-lg px-8 py-8">
    <%= form_with model: [:admin, @user], class: "space-y-6" do |f| %>
      <% if @user.errors.any? %>
        <div class="rounded-md bg-red-50 dark:bg-red-900/20 p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
                <%= pluralize(@user.errors.count, "error") %> prevented this user from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700 dark:text-red-300">
                <ul class="list-disc pl-5 space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= f.label :email_address, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.email_field :email_address,
            required: true,
            autofocus: true,
            autocomplete: "email",
            class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:text-white px-3 py-2" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.password_field :password,
            autocomplete: "new-password",
            minlength: 8,
            class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:text-white px-3 py-2" %>
        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Leave blank to keep current password. Minimum 8 characters.</p>
      </div>

      <div>
        <%= f.label :theme_preference, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.select :theme_preference,
            User.theme_preferences.keys.map { |t| [t.titleize, t] },
            {},
            class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:text-white px-3 py-2" %>
        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
          <strong>System:</strong> Follows OS preference. <strong>Dark/Light:</strong> Always use this mode.
        </p>
      </div>

      <% if Current.user&.admin? %>
        <div>
          <%= f.label :role, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= f.select :role,
              User.roles.keys.map { |r| [r.titleize, r] },
              {},
              class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:text-white px-3 py-2" %>
          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
            <strong>Admin:</strong> Full access to manage SOPs, users, and system settings.<br>
            <strong>Viewer:</strong> Read-only access to view tasks, SOPs, and dashboard.
          </p>
        </div>
      <% end %>

      <div class="flex items-center justify-end space-x-3 pt-4">
        <% if Current.user&.admin? %>
          <%= link_to "Cancel", admin_users_path,
              class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-900" %>
        <% else %>
          <%= link_to "Cancel", admin_root_path,
              class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-900" %>
        <% end %>
        <%= f.submit "Update Profile",
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-900" %>
      </div>
    <% end %>
  </div>
</div>
