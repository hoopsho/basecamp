<!-- app/views/admin/credentials/show.html.erb -->
<!-- Credential detail view with service info, scopes, expiration, and refresh action -->

<div class="space-y-6">
  <!-- Page header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex items-center gap-4">
      <%= link_to admin_credentials_path, class: "text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100 capitalize"><%= @credential.service_name %></h1>
        <p class="text-sm text-gray-500 dark:text-gray-400"><%= @credential.human_readable_credential_type %></p>
      </div>
    </div>

    <% if @credential.refreshable? && policy(@credential).refresh? %>
      <%= button_to refresh_admin_credential_path(@credential), method: :post, class: "inline-flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-700 dark:bg-primary-500 dark:hover:bg-primary-600 text-white rounded-lg text-sm font-medium transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99"/>
        </svg>
        Refresh Token
      <% end %>
    <% end %>
  </div>

  <!-- Status banner -->
  <div class="rounded-lg p-4 <%= status_banner_classes(@credential) %>">
    <div class="flex items-center gap-3">
      <div class="flex-shrink-0 w-10 h-10 rounded-full <%= status_icon_background(@credential) %> flex items-center justify-center">
        <svg class="w-5 h-5 <%= status_icon_color(@credential) %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <% case @credential.status %>
          <% when 'active' %>
            <% if @credential.expires_soon? %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z"/>
            <% else %>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            <% end %>
          <% when 'expired' %>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z"/>
          <% when 'revoked' %>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
          <% end %>
        </svg>
      </div>
      <div>
        <h2 class="text-sm font-medium <%= status_text_color(@credential) %>">
          <%= @credential.human_readable_status %>
        </h2>
        <p class="text-sm <%= status_subtext_color(@credential) %>">
          <%= status_message(@credential) %>
        </p>
      </div>
    </div>
  </div>

  <!-- Two column layout -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Credential Details -->
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Credential Details</h2>
      </div>
      <div class="p-6 space-y-4">
        <div class="flex items-start justify-between">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Service</dt>
          <dd class="text-sm text-gray-900 dark:text-gray-100 capitalize font-mono bg-gray-50 dark:bg-gray-900/50 px-2 py-1 rounded">
            <%= @credential.service_name %>
          </dd>
        </div>
        <div class="flex items-start justify-between">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Type</dt>
          <dd class="text-sm text-gray-900 dark:text-gray-100">
            <%= @credential.human_readable_credential_type %>
          </dd>
        </div>
        <div class="flex items-start justify-between">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Status</dt>
          <dd>
            <% status_badge_class = case @credential.status
               when 'active'
                 @credential.expires_soon? ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400' : 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400'
               when 'expired'
                 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400'
               when 'revoked'
                 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-400'
               end %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_badge_class %>">
              <%= @credential.human_readable_status %>
            </span>
          </dd>
        </div>
        <div class="flex items-start justify-between">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Created</dt>
          <dd class="text-sm text-gray-900 dark:text-gray-100">
            <%= @credential.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>
        <div class="flex items-start justify-between">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Last Updated</dt>
          <dd class="text-sm text-gray-900 dark:text-gray-100">
            <%= @credential.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>
      </div>
    </div>

    <!-- Expiration Info -->
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Expiration</h2>
      </div>
      <div class="p-6 space-y-4">
        <% if @credential.expires_at.present? %>
          <div class="flex items-center gap-3 p-3 rounded-lg <%= expiration_box_class(@credential) %>">
            <svg class="w-8 h-8 <%= expiration_icon_color(@credential) %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <p class="text-sm font-medium <%= expiration_text_color(@credential) %>">
                <%= @credential.expired? ? "Expired" : "Expires" %> on <%= @credential.expires_at.strftime("%B %d, %Y") %>
              </p>
              <p class="text-sm <%= expiration_subtext_color(@credential) %>">
                <% if @credential.expired? %>
                  Expired <%= time_ago_in_words(@credential.expires_at) %> ago
                <% else %>
                  <%= @credential.days_until_expiration %> days remaining
                <% end %>
              </p>
            </div>
          </div>

          <% if @credential.expires_soon? && !@credential.expired? %>
            <div class="flex items-start gap-2 text-sm text-yellow-700 dark:text-yellow-400">
              <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z"/>
              </svg>
              <span>This credential will expire soon and should be refreshed.</span>
            </div>
          <% end %>

          <% if @credential.refreshable? %>
            <div class="flex items-start gap-2 text-sm text-gray-600 dark:text-gray-400">
              <svg class="w-4 h-4 flex-shrink-0 mt-0.5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99"/>
              </svg>
              <span>This OAuth token can be refreshed automatically.</span>
            </div>
          <% end %>
        <% else %>
          <div class="flex items-center gap-3 p-3 rounded-lg bg-gray-50 dark:bg-gray-700/50">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <p class="text-sm font-medium text-gray-700 dark:text-gray-300">No expiration</p>
              <p class="text-sm text-gray-500 dark:text-gray-400">This credential does not expire</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Scopes -->
  <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Scopes</h2>
      <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Permissions granted to this credential</p>
    </div>
    <div class="p-6">
      <% if @credential.scopes.present? && @credential.scopes.any? %>
        <div class="flex flex-wrap gap-2">
          <% @credential.scopes.each do |scope| %>
            <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium bg-primary-50 dark:bg-primary-900/20 text-primary-700 dark:text-primary-300 border border-primary-200 dark:border-primary-800">
              <%= scope %>
            </span>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto w-12 h-12 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z"/>
          </svg>
          <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">No scopes configured</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Security notice -->
  <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-lg p-4">
    <div class="flex gap-3">
      <svg class="w-5 h-5 text-amber-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z"/>
      </svg>
      <div class="text-sm text-amber-700 dark:text-amber-300">
        <p class="font-medium mb-1">Security Notice</p>
        <p>Credential values are encrypted and never displayed. To update or rotate credentials, use the Rails console or update via the CredentialService.</p>
      </div>
    </div>
  </div>
</div>
