<!-- app/views/admin/credentials/index.html.erb -->
<!-- Credentials list with table showing service, type, status, expiration, and actions -->

<div class="space-y-6">
  <!-- Page header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Credentials</h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Manage API keys, OAuth tokens, and webhook secrets</p>
    </div>
  </div>

  <!-- Credentials table -->
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Service
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Type
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Status
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Expires
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @credentials.each do |credential| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
              <!-- Service -->
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to admin_credential_path(credential), class: "flex items-center gap-3 group" do %>
                  <div class="flex-shrink-0 w-10 h-10 rounded-lg <%= service_color_class(credential.service_name) %> flex items-center justify-center">
                    <%= service_icon(credential.service_name) %>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-gray-900 dark:text-gray-100 group-hover:text-primary-600 dark:group-hover:text-primary-400 capitalize">
                      <%= credential.service_name %>
                    </div>
                    <div class="text-xs text-gray-500 dark:text-gray-400">
                      <%= credential.scopes.take(2).join(", ") %>
                      <%= "+#{credential.scopes.length - 2} more" if credential.scopes.length > 2 %>
                    </div>
                  </div>
                <% end %>
              </td>

              <!-- Type -->
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center gap-1.5 text-sm text-gray-600 dark:text-gray-300">
                  <%= credential_type_icon(credential.credential_type) %>
                  <%= credential.human_readable_credential_type %>
                </span>
              </td>

              <!-- Status -->
              <td class="px-6 py-4 whitespace-nowrap">
                <% status_classes = case credential.status
                   when 'active'
                     credential.expires_soon? ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400' : 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400'
                   when 'expired'
                     'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400'
                   when 'revoked'
                     'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-400'
                   end %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_classes %>">
                  <span class="w-1.5 h-1.5 rounded-full mr-1.5 <%= status_dot_color(credential) %>"></span>
                  <%= credential.human_readable_status %>
                  <% if credential.expires_soon? && credential.active? %>
                    (<%= credential.days_until_expiration %>d)
                  <% end %>
                </span>
              </td>

              <!-- Expires -->
              <td class="px-6 py-4 whitespace-nowrap">
                <% if credential.expires_at.present? %>
                  <div class="flex items-center gap-1.5 text-sm <%= credential.expired? ? 'text-red-600 dark:text-red-400' : (credential.expires_soon? ? 'text-yellow-600 dark:text-yellow-400' : 'text-gray-600 dark:text-gray-300') %>">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <%= credential.expires_at.strftime("%b %d, %Y") %>
                  </div>
                <% else %>
                  <span class="text-sm text-gray-400 dark:text-gray-500">Never</span>
                <% end %>
              </td>

              <!-- Actions -->
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <div class="flex items-center justify-end gap-2">
                  <%= link_to admin_credential_path(credential), class: "text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 p-1 rounded hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors", title: "View details" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <span class="sr-only">View</span>
                  <% end %>

                  <% if credential.refreshable? && policy(credential).refresh? %>
                    <%= button_to refresh_admin_credential_path(credential), method: :post, class: "text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 p-1 rounded hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors", title: "Refresh OAuth token" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99"/>
                      </svg>
                      <span class="sr-only">Refresh</span>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @credentials.empty? %>
      <div class="px-6 py-12 text-center">
        <div class="mx-auto w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z"/>
          </svg>
        </div>
        <h3 class="text-sm font-medium text-gray-900 dark:text-gray-100">No credentials</h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Credentials are configured via seeds or Rails console.</p>
      </div>
    <% end %>
  </div>

  <!-- Info box -->
  <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
    <div class="flex gap-3">
      <svg class="w-5 h-5 text-blue-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z"/>
      </svg>
      <div class="text-sm text-blue-700 dark:text-blue-300">
        <p class="font-medium mb-1">About Credentials</p>
        <p>Credential values are encrypted and never displayed in the admin interface. OAuth tokens can be refreshed automatically. For infrastructure secrets, update them via Rails credentials.</p>
      </div>
    </div>
  </div>
</div>
