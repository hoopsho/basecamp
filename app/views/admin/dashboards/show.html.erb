<%# Admin Dashboard View %>
<div class="space-y-8">
  <%# Page header %>
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Dashboard</h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        Overview of SOP Engine operations and performance
      </p>
    </div>
    <div class="mt-4 sm:mt-0">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-200">
        <span class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></span>
        System Online
      </span>
    </div>
  </div>

  <%# Metric cards grid %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <%# Tasks Today %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-3 rounded-lg bg-blue-100 dark:bg-blue-900/30">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Tasks Today</p>
          <div class="flex items-baseline">
            <p class="text-2xl font-semibold text-gray-900 dark:text-gray-100"><%= @metrics[:tasks_created_today] %></p>
            <% if @metrics[:tasks_completed_today] > 0 %>
              <span class="ml-2 text-sm text-green-600 dark:text-green-400">
                <%= @metrics[:tasks_completed_today] %> completed
              </span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="mt-4 flex items-center text-sm">
        <%= link_to admin_tasks_path, class: "text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300" do %>
          View all tasks
          <svg class="w-4 h-4 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>
    </div>

    <%# Active Agents %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-3 rounded-lg bg-purple-100 dark:bg-purple-900/30">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Active Agents</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-gray-100"><%= @metrics[:active_agents] %></p>
        </div>
      </div>
      <div class="mt-4 flex items-center text-sm">
        <%= link_to admin_agents_path, class: "text-purple-600 dark:text-purple-400 hover:text-purple-800 dark:hover:text-purple-300" do %>
          Manage agents
          <svg class="w-4 h-4 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>
    </div>

    <%# LLM Cost Today %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-3 rounded-lg bg-amber-100 dark:bg-amber-900/30">
          <svg class="w-6 h-6 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">LLM Cost Today</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-gray-100">$<%= number_with_precision(@todays_cost, precision: 2) %></p>
        </div>
      </div>
      <div class="mt-4 flex items-center text-sm">
        <span class="text-gray-500 dark:text-gray-400">
          <%= @metrics[:llm_calls_today] %> calls made
        </span>
      </div>
    </div>

    <%# Pending Approvals %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 p-3 rounded-lg <%= @metrics[:tasks_waiting_human] > 0 ? 'bg-orange-100 dark:bg-orange-900/30' : 'bg-green-100 dark:bg-green-900/30' %>">
          <svg class="w-6 h-6 <%= @metrics[:tasks_waiting_human] > 0 ? 'text-orange-600 dark:text-orange-400' : 'text-green-600 dark:text-green-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Pending Approvals</p>
          <p class="text-2xl font-semibold <%= @metrics[:tasks_waiting_human] > 0 ? 'text-orange-600 dark:text-orange-400' : 'text-gray-900 dark:text-gray-100' %>">
            <%= @metrics[:tasks_waiting_human] %>
          </p>
        </div>
      </div>
      <div class="mt-4 flex items-center text-sm">
        <% if @metrics[:tasks_waiting_human] > 0 %>
          <%= link_to admin_tasks_path(status: 'waiting_on_human'), class: "text-orange-600 dark:text-orange-400 hover:text-orange-800 dark:hover:text-orange-300 font-medium" do %>
            Needs your attention
            <svg class="w-4 h-4 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
        <% else %>
          <span class="text-green-600 dark:text-green-400">All caught up!</span>
        <% end %>
      </div>
    </div>
  </div>

  <%# Secondary metrics row %>
  <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-4">
      <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Active SOPs</p>
      <p class="mt-1 text-xl font-semibold text-gray-900 dark:text-gray-100"><%= @metrics[:total_sops] %></p>
    </div>
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-4">
      <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Active Watchers</p>
      <p class="mt-1 text-xl font-semibold text-gray-900 dark:text-gray-100"><%= @metrics[:active_watchers] %></p>
    </div>
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-4">
      <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Tasks Pending</p>
      <p class="mt-1 text-xl font-semibold text-gray-900 dark:text-gray-100"><%= @metrics[:tasks_pending] %></p>
    </div>
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-4">
      <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Failed Today</p>
      <p class="mt-1 text-xl font-semibold <%= @metrics[:tasks_failed] > 0 ? 'text-red-600 dark:text-red-400' : 'text-gray-900 dark:text-gray-100' %>">
        <%= @metrics[:tasks_failed] %>
      </p>
    </div>
  </div>

  <%# Recent Tasks Table %>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Recent Tasks</h2>
      <%= link_to admin_tasks_path, class: "text-sm text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300" do %>
        View all
        <svg class="w-4 h-4 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      <% end %>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Task</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Agent</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Created</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @recent_tasks.each do |task| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div>
                    <div class="text-sm font-medium text-gray-900 dark:text-gray-100">
                      <%= link_to task.sop.name, admin_task_path(task), class: "hover:text-primary-600 dark:hover:text-primary-400" %>
                    </div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                      Step <%= task.current_step_position || 0 %> of <%= task.sop.steps.count %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 dark:text-gray-100"><%= task.agent.name %></div>
                <div class="text-xs text-gray-500 dark:text-gray-400"><%= task.agent.slug %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= status_badge(task.status) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                <%= time_ago_in_words(task.created_at) %> ago
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to admin_task_path(task), class: "text-primary-600 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300" do %>
                  <span class="sr-only">View</span>
                  <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if @recent_tasks.empty? %>
        <div class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
          <svg class="mx-auto h-12 w-12 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          <p class="mt-2 text-sm">No recent tasks</p>
          <p class="text-xs">Tasks will appear here when SOPs are triggered</p>
        </div>
      <% end %>
    </div>
  </div>

  <%# Quick actions %>
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
    <%= link_to admin_sops_path, class: "flex items-center p-4 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-500 dark:hover:border-primary-500 transition-colors group" do %>
      <div class="flex-shrink-0 p-2 bg-blue-100 dark:bg-blue-900/30 rounded-lg group-hover:bg-blue-200 dark:group-hover:bg-blue-900/50">
        <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-gray-900 dark:text-gray-100">SOP Builder</p>
        <p class="text-xs text-gray-500 dark:text-gray-400">Create and manage procedures</p>
      </div>
    <% end %>

    <%= link_to admin_tasks_path, class: "flex items-center p-4 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-500 dark:hover:border-primary-500 transition-colors group" do %>
      <div class="flex-shrink-0 p-2 bg-purple-100 dark:bg-purple-900/30 rounded-lg group-hover:bg-purple-200 dark:group-hover:bg-purple-900/50">
        <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-gray-900 dark:text-gray-100">Task Monitor</p>
        <p class="text-xs text-gray-500 dark:text-gray-400">View and manage running tasks</p>
      </div>
    <% end %>

    <%= link_to admin_credentials_path, class: "flex items-center p-4 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary-500 dark:hover:border-primary-500 transition-colors group" do %>
      <div class="flex-shrink-0 p-2 bg-green-100 dark:bg-green-900/30 rounded-lg group-hover:bg-green-200 dark:group-hover:bg-green-900/50">
        <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-gray-900 dark:text-gray-100">Credentials</p>
        <p class="text-xs text-gray-500 dark:text-gray-400">Manage API keys and tokens</p>
      </div>
    <% end %>
  </div>
</div>
