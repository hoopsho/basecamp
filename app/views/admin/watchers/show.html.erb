<!-- app/views/admin/watchers/show.html.erb -->

<div class="space-y-6">
  <!-- Page header with actions -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex items-center gap-4">
      <%= link_to admin_watchers_path, class: "text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100"><%= @watcher.name %></h1>
        <p class="text-sm text-gray-500 dark:text-gray-400"><%= @watcher.human_readable_check_type %> watcher</p>
      </div>
    </div>

    <div class="flex items-center gap-3">
      <% if @watcher.active? && policy(@watcher).pause? %>
        <%= button_to pause_admin_watcher_path(@watcher), method: :post, class: "inline-flex items-center gap-2 px-4 py-2 border border-yellow-300 dark:border-yellow-700 text-yellow-700 dark:text-yellow-400 bg-yellow-50 dark:bg-yellow-900/20 hover:bg-yellow-100 dark:hover:bg-yellow-900/30 rounded-lg text-sm font-medium transition-colors", data: { turbo_confirm: "Pause this watcher?" } do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.75 5.25v13.5m-7.5-13.5v13.5"/>
          </svg>
          Pause
        <% end %>
      <% elsif @watcher.paused? && policy(@watcher).resume? %>
        <%= button_to resume_admin_watcher_path(@watcher), method: :post, class: "inline-flex items-center gap-2 px-4 py-2 border border-green-300 dark:border-green-700 text-green-700 dark:text-green-400 bg-green-50 dark:bg-green-900/20 hover:bg-green-100 dark:hover:bg-green-900/30 rounded-lg text-sm font-medium transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z"/>
          </svg>
          Resume
        <% end %>
      <% end %>

      <% if policy(@watcher).run_now? %>
        <%= button_to run_now_admin_watcher_path(@watcher), method: :post, class: "inline-flex items-center gap-2 px-4 py-2 border border-blue-300 dark:border-blue-700 text-blue-700 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 hover:bg-blue-100 dark:hover:bg-blue-900/30 rounded-lg text-sm font-medium transition-colors", data: { turbo_confirm: "Run this watcher check now?" } do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z"/>
          </svg>
          Run Now
        <% end %>
      <% end %>

      <% if policy(@watcher).update? %>
        <%= link_to edit_admin_watcher_path(@watcher), class: "inline-flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-700 dark:bg-primary-500 dark:hover:bg-primary-600 text-white rounded-lg text-sm font-medium transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"/>
          </svg>
          Edit
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Status banner -->
  <div class="rounded-lg p-4 <%= @watcher.active? ? 'bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800' : (@watcher.paused? ? 'bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800' : 'bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700') %>">
    <div class="flex items-center gap-3">
      <div class="flex-shrink-0 w-10 h-10 rounded-full <%= @watcher.active? ? 'bg-green-100 dark:bg-green-900/40' : (@watcher.paused? ? 'bg-yellow-100 dark:bg-yellow-900/40' : 'bg-gray-200 dark:bg-gray-700') %> flex items-center justify-center">
        <svg class="w-5 h-5 <%= @watcher.active? ? 'text-green-600 dark:text-green-400' : (@watcher.paused? ? 'text-yellow-600 dark:text-yellow-400' : 'text-gray-500 dark:text-gray-400') %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <% if @watcher.active? %>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          <% elsif @watcher.paused? %>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.25 9v6m-4.5 0V9M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          <% else %>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
          <% end %>
        </svg>
      </div>
      <div>
        <h2 class="text-sm font-medium <%= @watcher.active? ? 'text-green-800 dark:text-green-200' : (@watcher.paused? ? 'text-yellow-800 dark:text-yellow-200' : 'text-gray-700 dark:text-gray-300') %>">
          <%= @watcher.status.capitalize %>
        </h2>
        <p class="text-sm <%= @watcher.active? ? 'text-green-600 dark:text-green-400' : (@watcher.paused? ? 'text-yellow-600 dark:text-yellow-400' : 'text-gray-500 dark:text-gray-400') %>">
          <% if @watcher.active? %>
            Watcher is actively monitoring
          <% elsif @watcher.paused? %>
            Watcher is paused and will not check until resumed
          <% else %>
            Watcher is disabled
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <!-- Stats cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <!-- Check Type -->
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Check Type</p>
          <p class="mt-1 text-2xl font-semibold text-gray-900 dark:text-gray-100"><%= @watcher.human_readable_check_type %></p>
        </div>
        <div class="w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Interval -->
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Interval</p>
          <p class="mt-1 text-2xl font-semibold text-gray-900 dark:text-gray-100"><%= @watcher.interval_minutes %>m</p>
        </div>
        <div class="w-10 h-10 rounded-lg bg-orange-100 dark:bg-orange-900/30 flex items-center justify-center">
          <svg class="w-5 h-5 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Last Checked -->
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Last Checked</p>
          <p class="mt-1 text-2xl font-semibold text-gray-900 dark:text-gray-100">
            <% if @watcher.last_checked_at.present? %>
              <%= time_ago_in_words(@watcher.last_checked_at) %>
            <% else %>
              Never
            <% end %>
          </p>
        </div>
        <div class="w-10 h-10 rounded-lg bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center">
          <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Next Check Due -->
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Next Check Due</p>
          <p class="mt-1 text-2xl font-semibold text-gray-900 dark:text-gray-100">
            <% if @watcher.active? %>
              <% if @watcher.check_overdue? %>
                <span class="text-red-600 dark:text-red-400">Overdue</span>
              <% elsif @watcher.last_checked_at.nil? %>
                Now
              <% else %>
                <%= time_ago_in_words(@watcher.next_check_due_at) %>
              <% end %>
            <% else %>
              <span class="text-gray-400 dark:text-gray-500">Paused</span>
            <% end %>
          </p>
        </div>
        <div class="w-10 h-10 rounded-lg bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
          <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Two column layout -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Watcher Details -->
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Details</h2>
      </div>
      <div class="p-6 space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">SOP</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
            <%= link_to @watcher.sop.name, admin_sop_path(@watcher.sop), class: "text-primary-600 dark:text-primary-400 hover:underline" %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Agent</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
            <%= link_to @watcher.agent.name, admin_agent_path(@watcher.agent), class: "text-primary-600 dark:text-primary-400 hover:underline" %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Created</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
            <%= @watcher.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Last Updated</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100">
            <%= @watcher.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
          </dd>
        </div>
      </div>
    </div>

    <!-- Check Config -->
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Check Configuration</h2>
      </div>
      <div class="p-6">
        <% if @watcher.check_config.present? && @watcher.check_config.any? %>
          <dl class="space-y-3">
            <% @watcher.check_config.each do |key, value| %>
              <div class="flex items-start gap-3">
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 min-w-[120px]"><%= key.humanize %></dt>
                <dd class="text-sm text-gray-900 dark:text-gray-100 font-mono bg-gray-50 dark:bg-gray-900/50 px-2 py-1 rounded">
                  <%= value.is_a?(Hash) || value.is_a?(Array) ? value.to_json : value %>
                </dd>
              </div>
            <% end %>
          </dl>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto w-12 h-12 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.343 3.94c.09-.542.56-.94 1.11-.94h1.093c.55 0 1.02.398 1.11.94l.149.894c.07.424.384.764.78.93.398.164.855.142 1.205-.108l.737-.527a1.125 1.125 0 011.45.12l.773.774c.39.389.44 1.002.12 1.45l-.527.737c-.25.35-.272.806-.107 1.204.165.397.505.71.93.78l.893.15c.543.09.94.56.94 1.109v1.094c0 .55-.397 1.02-.94 1.11l-.893.149c-.425.07-.765.383-.93.78-.165.398-.143.854.107 1.204l.527.738c.32.447.269 1.06-.12 1.45l-.774.773a1.125 1.125 0 01-1.449.12l-.738-.527c-.35-.25-.806-.272-1.203-.107-.397.165-.71.505-.781.929l-.149.894c-.09.542-.56.94-1.11.94h-1.094c-.55 0-1.019-.398-1.11-.94l-.148-.894c-.071-.424-.384-.764-.781-.93-.398-.164-.854-.142-1.204.108l-.738.527c-.447.32-1.06.269-1.45-.12l-.773-.774a1.125 1.125 0 01-.12-1.45l.527-.737c.25-.35.273-.806.108-1.204-.165-.397-.505-.71-.93-.78l-.894-.15c-.542-.09-.94-.56-.94-1.109v-1.094c0-.55.398-1.02.94-1.11l.894-.149c.424-.07.765-.383.93-.78.165-.398.143-.854-.107-1.204l-.527-.738a1.125 1.125 0 01.12-1.45l.773-.773a1.125 1.125 0 011.45-.12l.737.527c.35.25.807.272 1.204.107.397-.165.71-.505.78-.929l.15-.894z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">No check configuration</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Tasks triggered by this watcher's SOP/Agent combo -->
  <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Recent Tasks</h2>
    </div>

    <% if @recent_tasks.any? %>
      <div class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @recent_tasks.each do |task| %>
          <div class="px-6 py-4 hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <% status_icon_color = case task.status
                   when 'completed'
                     'text-green-500'
                   when 'failed', 'escalated'
                     'text-red-500'
                   when 'waiting_on_human'
                     'text-yellow-500'
                   when 'in_progress'
                     'text-blue-500'
                   else
                     'text-gray-400'
                   end %>
                <svg class="w-5 h-5 <%= status_icon_color %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25z"/>
                </svg>
                <div>
                  <%= link_to admin_task_path(task), class: "text-sm font-medium text-gray-900 dark:text-gray-100 hover:text-primary-600 dark:hover:text-primary-400" do %>
                    <%= task.sop.name %>
                  <% end %>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    <%= task.human_readable_status %> &middot; <%= time_ago_in_words(task.created_at) %> ago
                  </p>
                </div>
              </div>
              <% status_badge_class = case task.status
                 when 'completed'
                   'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400'
                 when 'failed', 'escalated'
                   'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400'
                 when 'waiting_on_human'
                   'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400'
                 when 'in_progress'
                   'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400'
                 else
                   'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-400'
                 end %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= status_badge_class %>">
                <%= task.human_readable_status %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <svg class="mx-auto w-12 h-12 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25z"/>
        </svg>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">No tasks triggered yet</p>
      </div>
    <% end %>
  </div>

  <!-- Danger Zone -->
  <% if policy(@watcher).destroy? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-red-200 dark:border-red-800 overflow-hidden">
      <div class="px-6 py-4 border-b border-red-200 dark:border-red-800 bg-red-50 dark:bg-red-900/20">
        <h2 class="text-lg font-medium text-red-800 dark:text-red-200">Danger Zone</h2>
      </div>
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-900 dark:text-gray-100">Delete this watcher</h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">This action cannot be undone. The watcher will stop monitoring immediately.</p>
          </div>
          <%= button_to admin_watcher_path(@watcher), method: :delete, class: "inline-flex items-center gap-2 px-4 py-2 border border-red-300 dark:border-red-700 text-red-700 dark:text-red-400 bg-red-50 dark:bg-red-900/20 hover:bg-red-100 dark:hover:bg-red-900/30 rounded-lg text-sm font-medium transition-colors", data: { turbo_confirm: "Are you sure you want to delete this watcher? This cannot be undone." } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
