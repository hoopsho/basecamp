<!-- app/views/admin/watchers/index.html.erb -->

<div class="space-y-6">
  <!-- Page header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Watchers</h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Recurring monitors that check conditions and trigger SOPs</p>
    </div>
    <% if policy(Watcher).create? %>
      <%= link_to new_admin_watcher_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-700 dark:bg-primary-500 dark:hover:bg-primary-600 text-white rounded-lg text-sm font-medium transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.5v15m7.5-7.5h-15"/>
        </svg>
        New Watcher
      <% end %>
    <% end %>
  </div>

  <!-- Watchers table -->
  <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Name
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              SOP
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Agent
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Check Type
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Interval
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Status
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Last Checked
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @watchers.each do |watcher| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
              <!-- Name -->
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to admin_watcher_path(watcher), class: "text-sm font-medium text-gray-900 dark:text-gray-100 hover:text-primary-600 dark:hover:text-primary-400" do %>
                  <%= watcher.name %>
                <% end %>
              </td>

              <!-- SOP -->
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to watcher.sop.name, admin_sop_path(watcher.sop), class: "text-sm text-primary-600 dark:text-primary-400 hover:underline" %>
              </td>

              <!-- Agent -->
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to watcher.agent.name, admin_agent_path(watcher.agent), class: "text-sm text-primary-600 dark:text-primary-400 hover:underline" %>
              </td>

              <!-- Check Type -->
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300">
                  <%= watcher.human_readable_check_type %>
                </span>
              </td>

              <!-- Interval -->
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-1.5 text-sm text-gray-600 dark:text-gray-300">
                  <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <%= watcher.interval_minutes %> min
                </div>
              </td>

              <!-- Status -->
              <td class="px-6 py-4 whitespace-nowrap">
                <% status_classes = case watcher.status
                   when 'active'
                     'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400'
                   when 'paused'
                     'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400'
                   when 'disabled'
                     'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-400'
                   end %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_classes %>">
                  <span class="w-1.5 h-1.5 rounded-full mr-1.5 <%= watcher.active? ? 'bg-green-500' : (watcher.paused? ? 'bg-yellow-500' : 'bg-gray-500') %>"></span>
                  <%= watcher.status.capitalize %>
                </span>
              </td>

              <!-- Last Checked -->
              <td class="px-6 py-4 whitespace-nowrap">
                <% if watcher.last_checked_at.present? %>
                  <span class="text-sm text-gray-600 dark:text-gray-300" title="<%= watcher.last_checked_at.strftime('%Y-%m-%d %H:%M:%S %Z') %>">
                    <%= time_ago_in_words(watcher.last_checked_at) %> ago
                  </span>
                <% else %>
                  <span class="text-sm text-gray-400 dark:text-gray-500">Never</span>
                <% end %>
              </td>

              <!-- Actions -->
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <div class="flex items-center justify-end gap-2">
                  <%= link_to admin_watcher_path(watcher), class: "text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 p-1 rounded hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors", title: "View details" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <span class="sr-only">View</span>
                  <% end %>

                  <% if policy(watcher).update? %>
                    <%= link_to edit_admin_watcher_path(watcher), class: "text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 p-1 rounded hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors", title: "Edit" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"/>
                      </svg>
                      <span class="sr-only">Edit</span>
                    <% end %>
                  <% end %>

                  <% if watcher.active? && policy(watcher).pause? %>
                    <%= button_to pause_admin_watcher_path(watcher), method: :post, class: "text-gray-400 hover:text-yellow-600 dark:hover:text-yellow-400 p-1 rounded hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors", title: "Pause watcher", data: { turbo_confirm: "Pause this watcher?" } do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.75 5.25v13.5m-7.5-13.5v13.5"/>
                      </svg>
                      <span class="sr-only">Pause</span>
                    <% end %>
                  <% elsif watcher.paused? && policy(watcher).resume? %>
                    <%= button_to resume_admin_watcher_path(watcher), method: :post, class: "text-gray-400 hover:text-green-600 dark:hover:text-green-400 p-1 rounded hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors", title: "Resume watcher" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z"/>
                      </svg>
                      <span class="sr-only">Resume</span>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @watchers.empty? %>
      <div class="px-6 py-12 text-center">
        <div class="mx-auto w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
        </div>
        <h3 class="text-sm font-medium text-gray-900 dark:text-gray-100">No watchers</h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating your first watcher.</p>
        <% if policy(Watcher).create? %>
          <%= link_to new_admin_watcher_path, class: "mt-4 inline-flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-700 dark:bg-primary-500 dark:hover:bg-primary-600 text-white rounded-lg text-sm font-medium transition-colors" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.5v15m7.5-7.5h-15"/>
            </svg>
            New Watcher
          <% end %>
        <% end %>
      </div>
    <% end %>

    <% if @pagy.pages > 1 %>
      <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700">
        <%== series_nav(@pagy) %>
      </div>
    <% end %>
  </div>
</div>
