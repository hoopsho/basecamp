<% content_for :title, @sop.name %>

<div class="space-y-6">
  <%# Page header with actions %>
  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
    <div class="flex items-start gap-4">
      <%= link_to admin_sops_path, class: "mt-1 p-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
      <% end %>
      <div>
        <div class="flex items-center gap-3">
          <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100"><%= @sop.name %></h1>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium capitalize
            <%= case @sop.status
                when 'active' then 'bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-200'
                when 'draft' then 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-200'
                when 'disabled' then 'bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-200'
                end %>">
            <%= @sop.status %>
          </span>
        </div>
        <p class="mt-1 text-sm text-gray-600 dark:text-gray-400"><%= @sop.description %></p>
      </div>
    </div>
    <div class="flex items-center gap-2">
      <% if @sop.active? %>
        <%= button_to run_admin_sop_path(@sop), class: "inline-flex items-center gap-2 px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors", method: :post do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          Run Now
        <% end %>
      <% end %>
      <% if Current.user.admin? %>
        <%= link_to edit_admin_sop_path(@sop), class: "inline-flex items-center gap-2 px-4 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
          Edit
        <% end %>
      <% end %>
    </div>
  </div>

  <%# SOP Details Cards %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4">
      <div class="flex items-center gap-3">
        <div class="p-2 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
          <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
        </div>
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">Agent</p>
          <p class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= @sop.agent.name %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4">
      <div class="flex items-center gap-3">
        <div class="p-2 bg-purple-100 dark:bg-purple-900/30 rounded-lg">
          <% case @sop.trigger_type %>
          <% when 'manual' %>
            <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11"/></svg>
          <% when 'watcher' %>
            <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
          <% when 'event' %>
            <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
          <% when 'agent_loop' %>
            <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
          <% end %>
        </div>
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">Trigger Type</p>
          <p class="text-sm font-medium text-gray-900 dark:text-gray-100 capitalize"><%= @sop.trigger_type.humanize %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4">
      <div class="flex items-center gap-3">
        <div class="p-2 bg-amber-100 dark:bg-amber-900/30 rounded-lg">
          <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/></svg>
        </div>
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">Max LLM Tier</p>
          <p class="text-sm font-medium text-gray-900 dark:text-gray-100">Tier <%= @sop.max_tier %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4">
      <div class="flex items-center gap-3">
        <div class="p-2 bg-green-100 dark:bg-green-900/30 rounded-lg">
          <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
        </div>
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">Version</p>
          <p class="text-sm font-medium text-gray-900 dark:text-gray-100">v<%= @sop.version %></p>
        </div>
      </div>
    </div>
  </div>

  <%# How This Works %>
  <% if @steps.any? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden"
         data-controller="toggle">
      <button class="w-full px-6 py-4 flex items-center justify-between hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors"
              data-action="click->toggle#toggle"
              data-toggle-target="button"
              aria-expanded="true">
        <div class="flex items-center gap-2">
          <%= svg_icon('information-circle', class: 'w-5 h-5 text-primary-500') %>
          <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100">How this works</h2>
        </div>
        <%= svg_icon('chevron-down', class: 'w-5 h-5 text-gray-400 transition-transform') %>
      </button>

      <div data-toggle-target="content">
        <div class="border-t border-gray-200 dark:border-gray-700 px-6 py-5 space-y-4">
          <% if @sop.description.present? %>
            <p class="text-sm text-gray-700 dark:text-gray-300"><%= @sop.description %></p>
          <% end %>

          <p class="text-sm text-gray-500 dark:text-gray-400">When triggered, this SOP runs through the following steps in order:</p>

          <ol class="space-y-2">
            <% @steps.each do |step| %>
              <% colors = step_type_color_classes(step.step_type) %>
              <li class="flex items-start gap-3">
                <span class="flex-shrink-0 inline-flex items-center justify-center w-6 h-6 rounded-full text-xs font-bold <%= colors[:bg] %> <%= colors[:text] %>">
                  <%= step.position %>
                </span>
                <div class="text-sm">
                  <span class="font-medium text-gray-900 dark:text-gray-100"><%= step.name %></span>
                  <span class="text-gray-500 dark:text-gray-400">&mdash; <%= step_type_description(step) %></span>
                </div>
              </li>
            <% end %>
          </ol>

          <%# Color legend %>
          <div class="flex flex-wrap gap-4 pt-3 border-t border-gray-100 dark:border-gray-700">
            <div class="flex items-center gap-1.5 text-xs text-gray-500 dark:text-gray-400">
              <span class="w-2.5 h-2.5 rounded-full bg-blue-500"></span> AI-powered
            </div>
            <div class="flex items-center gap-1.5 text-xs text-gray-500 dark:text-gray-400">
              <span class="w-2.5 h-2.5 rounded-full bg-green-500"></span> Action
            </div>
            <div class="flex items-center gap-1.5 text-xs text-gray-500 dark:text-gray-400">
              <span class="w-2.5 h-2.5 rounded-full bg-orange-500"></span> Human approval
            </div>
            <div class="flex items-center gap-1.5 text-xs text-gray-500 dark:text-gray-400">
              <span class="w-2.5 h-2.5 rounded-full bg-gray-400"></span> Routing / wait
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# Steps Section %>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div class="flex items-center gap-3">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Steps</h2>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200">
          <%= @steps.count %> total
        </span>
      </div>
      <% if Current.user.admin? %>
        <%= link_to new_admin_sop_step_path(@sop), class: "inline-flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
          Add Step
        <% end %>
      <% end %>
    </div>

    <div>
      <% if @steps.any? %>
        <%= render 'step_pipeline', steps: @steps %>
      <% else %>
        <div class="px-6 py-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/></svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">No steps</h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">This SOP doesn't have any steps yet.</p>
          <% if Current.user.admin? %>
            <div class="mt-6">
              <%= link_to new_admin_sop_step_path(@sop), class: "inline-flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
                Add First Step
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <%# Required Services %>
  <% if @sop.required_services.any? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h3 class="text-sm font-medium text-gray-900 dark:text-gray-100 mb-3">Required Services</h3>
      <div class="flex flex-wrap gap-2">
        <% @sop.required_services.each do |service| %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 border border-gray-200 dark:border-gray-600">
            <%= service %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Danger zone %>
  <% if Current.user.admin? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-red-200 dark:border-red-800/50 p-6">
      <h3 class="text-sm font-medium text-red-800 dark:text-red-400 mb-3">Danger Zone</h3>
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <p class="text-sm text-gray-700 dark:text-gray-300">Delete this SOP</p>
          <p class="text-sm text-gray-500 dark:text-gray-400">This action cannot be undone.</p>
        </div>
        <%= button_to admin_sop_path(@sop), method: :delete,
            data: { turbo_confirm: "Are you sure? This will permanently delete the SOP '#{@sop.name}' and all its steps." },
            class: "inline-flex items-center gap-2 px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
          Delete SOP
        <% end %>
      </div>
    </div>
  <% end %>
</div>
