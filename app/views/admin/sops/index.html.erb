<% content_for :title, "SOPs" %>

<div class="space-y-6">
  <%# Page header %>
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Standard Operating Procedures</h1>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Manage automated workflows and their steps.</p>
    </div>
    <% if Current.user.admin? %>
      <%= link_to new_admin_sop_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-700 dark:bg-primary-600 dark:hover:bg-primary-700 text-white font-medium rounded-lg transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
        New SOP
      <% end %>
    <% end %>
  </div>

  <%# Filters %>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4">
    <%= form_with url: admin_sops_path, method: :get, class: "flex flex-col sm:flex-row gap-4", data: { turbo_frame: "sops_list", turbo_action: "advance" } do |f| %>
      <div class="flex-1">
        <%= f.label :agent_id, "Filter by Agent", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.select :agent_id, 
            options_for_select([['All Agents', '']] + Agent.all.map { |a| [a.name, a.id] }, params[:agent_id]),
            {},
            { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent", onchange: "this.form.requestSubmit()" }
        %>
      </div>
      <div class="flex-1">
        <%= f.label :status, "Filter by Status", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.select :status,
            options_for_select([['All Statuses', ''], ['Active', 'active'], ['Draft', 'draft'], ['Disabled', 'disabled']], params[:status]),
            {},
            { class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent", onchange: "this.form.requestSubmit()" }
        %>
      </div>
      <div class="flex items-end">
        <%= link_to admin_sops_path, class: "px-4 py-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors" do %>
          Clear filters
        <% end %>
      </div>
    <% end %>
  </div>

  <%# SOPs table %>
  <%= turbo_frame_tag "sops_list" do %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-700/50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Name</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Agent</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Trigger</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
              <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Steps</th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
            <% if @sops.any? %>
              <% @sops.each do |sop| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <div class="flex-shrink-0">
                        <% case sop.trigger_type %>
                        <% when 'manual' %>
                          <svg class="w-8 h-8 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11"/></svg>
                        <% when 'watcher' %>
                          <svg class="w-8 h-8 text-blue-500 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
                        <% when 'event' %>
                          <svg class="w-8 h-8 text-purple-500 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                        <% when 'agent_loop' %>
                          <svg class="w-8 h-8 text-green-500 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
                        <% end %>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900 dark:text-gray-100">
                          <%= link_to sop.name, admin_sop_path(sop), class: "hover:text-primary-600 dark:hover:text-primary-400 transition-colors" %>
                        </div>
                        <div class="text-sm text-gray-500 dark:text-gray-400">
                          <%= sop.slug %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900 dark:text-gray-100"><%= sop.agent.name %></div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">#<%= sop.agent.slack_channel %></div>
                  </td>
                  <td class="px-6 py-4">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium capitalize
                      <%= case sop.trigger_type
                          when 'manual' then 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200'
                          when 'watcher' then 'bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200'
                          when 'event' then 'bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-200'
                          when 'agent_loop' then 'bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-200'
                          end %>">
                      <%= sop.trigger_type.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium capitalize
                      <%= case sop.status
                          when 'active' then 'bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-200'
                          when 'draft' then 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-200'
                          when 'disabled' then 'bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-200'
                          end %>">
                      <%= sop.status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 text-center">
                    <span class="text-sm text-gray-900 dark:text-gray-100 font-medium"><%= sop.steps.count %></span>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <div class="flex items-center justify-end gap-2">
                      <%= link_to admin_sop_path(sop), class: "p-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors", title: "View" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
                      <% end %>
                      <% if Current.user.admin? %>
                        <%= link_to edit_admin_sop_path(sop), class: "p-2 text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors", title: "Edit" do %>
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                        <% end %>
                        <%= button_to admin_sop_path(sop), method: :delete, 
                            data: { turbo_confirm: "Are you sure you want to delete this SOP?" },
                            class: "p-2 text-gray-400 hover:text-red-600 dark:hover:text-red-400 transition-colors", title: "Delete" do %>
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6" class="px-6 py-12 text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                  <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">No SOPs</h3>
                  <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating a new SOP.</p>
                  <% if Current.user.admin? %>
                    <div class="mt-6">
                      <%= link_to new_admin_sop_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
                        New SOP
                      <% end %>
                    </div>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%# Pagination %>
      <% if @pagy.pages > 1 %>
        <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700">
          <%== pagy_nav(@pagy) %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
