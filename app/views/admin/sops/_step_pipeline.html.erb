<%# Visual step pipeline â€” connected vertical timeline %>
<div class="px-6 py-6">
  <div class="relative">
    <% steps.each_with_index do |step, index| %>
      <% colors = step_type_color_classes(step.step_type) %>
      <% is_human = step.step_type == 'slack_ask_human' %>
      <% is_last = index == steps.size - 1 %>

      <div class="relative flex gap-4 <%= 'pb-8' unless is_last %>">
        <%# Connector line %>
        <% unless is_last %>
          <div class="absolute left-5 top-10 w-0.5 h-[calc(100%-2.5rem)] <%= colors[:bg] %>"></div>
        <% end %>

        <%# Icon node %>
        <div class="relative flex-shrink-0 w-10 h-10 rounded-full flex items-center justify-center <%= colors[:bg] %> <%= is_human ? 'ring-2 ring-orange-400 dark:ring-orange-500' : '' %>">
          <%= svg_icon(step_type_icon_name(step.step_type), class: "w-5 h-5 #{colors[:text]}") %>
        </div>

        <%# Step card %>
        <div class="flex-1 min-w-0 rounded-lg border p-4
          <%= is_human ? "bg-orange-50/50 dark:bg-orange-900/10 border-orange-200 dark:border-orange-800/50" : "bg-white dark:bg-gray-800 #{colors[:border]}" %>">

          <%# Header %>
          <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2">
            <div>
              <div class="flex items-center gap-2">
                <span class="text-xs font-semibold uppercase tracking-wider <%= colors[:text] %>">Step <%= step.position %></span>
                <% if is_human %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-orange-100 dark:bg-orange-900/30 text-orange-700 dark:text-orange-300">
                    Human checkpoint
                  </span>
                <% end %>
              </div>
              <h3 class="text-base font-medium text-gray-900 dark:text-gray-100 mt-0.5"><%= step.name %></h3>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-0.5"><%= step_type_description(step) %></p>
            </div>

            <%# Badges %>
            <div class="flex items-center gap-2 flex-shrink-0">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium capitalize <%= colors[:bg] %> <%= colors[:text] %>">
                <%= step.step_type.humanize %>
              </span>
              <% if step.llm_required? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 dark:bg-amber-900/30 text-amber-800 dark:text-amber-200"
                      title="LLM Tier <%= step.llm_tier %><%= step.max_llm_tier > step.llm_tier ? " - #{step.max_llm_tier}" : '' %>">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                  T<%= step.llm_tier %><%= step.max_llm_tier > step.llm_tier ? "-#{step.max_llm_tier}" : '' %>
                </span>
              <% end %>
            </div>
          </div>

          <%# Transitions %>
          <div class="mt-3 flex flex-wrap items-center gap-4 text-sm">
            <div class="flex items-center gap-1.5">
              <span class="text-gray-500 dark:text-gray-400">On success:</span>
              <span class="font-medium text-green-600 dark:text-green-400">
                <%= step.on_success == 'complete' ? 'Complete task' : "Step #{step.on_success}" %>
              </span>
            </div>
            <div class="flex items-center gap-1.5">
              <span class="text-gray-500 dark:text-gray-400">On failure:</span>
              <span class="font-medium text-red-600 dark:text-red-400">
                <%= step.human_action_name(step.on_failure) %>
              </span>
            </div>
            <% if step.on_uncertain.present? && step.on_uncertain != 'escalate_tier' %>
              <div class="flex items-center gap-1.5">
                <span class="text-gray-500 dark:text-gray-400">On uncertain:</span>
                <span class="font-medium text-yellow-600 dark:text-yellow-400">
                  <%= step.human_action_name(step.on_uncertain) %>
                </span>
              </div>
            <% end %>
            <div class="flex items-center gap-1.5">
              <span class="text-gray-500 dark:text-gray-400">Retries:</span>
              <span class="font-medium text-gray-700 dark:text-gray-300"><%= step.max_retries %></span>
            </div>
          </div>

          <%# Admin actions %>
          <% if Current.user.admin? %>
            <div class="mt-3 pt-3 border-t border-gray-100 dark:border-gray-700 flex items-center gap-1">
              <%= link_to edit_admin_step_path(step), class: "inline-flex items-center gap-1 px-2 py-1 text-xs text-gray-500 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors rounded", title: "Edit" do %>
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                Edit
              <% end %>
              <%= button_to admin_step_path(step), method: :delete,
                  data: { turbo_confirm: "Are you sure you want to delete this step?" },
                  class: "inline-flex items-center gap-1 px-2 py-1 text-xs text-gray-500 dark:text-gray-400 hover:text-red-600 dark:hover:text-red-400 transition-colors rounded", title: "Delete" do %>
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                Delete
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
